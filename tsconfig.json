{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@presentation/*": ["src/api/0 - Presentation/*"],
      "@services/*": ["src/api/1 - Services/*"],
      "@domain/*": ["src/api/2 - Domain/*"],
      "@core/*": ["src/api/3 - Core/*"]
    }
  }
}
